@{
    ViewData["Title"] = "Home page";
}

@model BooksViewModel

<div class="text-center">
    <h1 class="display-4">Welcome to Amazon</h1>
    <p>Below you can find a list of available books there are only 10 books per page so please feel free to browse using the routes below</p>
</div>


<!--Display 10 books per page-->
@foreach (Book book in Model.Books)
            {

       <partial name="BookSummary" model="book"/>

            }
<!--Display Each Page Count-->
<div page-model="@Model.PageInfo" page-action="Index" page-Classes-Enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>